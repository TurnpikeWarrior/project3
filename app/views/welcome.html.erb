    <input type="text"
           name ="user[email]"
           placeholder="Your email address"><br/>

    <input type="password"
           name="user[password_digest]"
           placeholder="Password"><br/>

    <input type="radio"
           name="user[type]" checked>Child

    <input type="radio"
           name="user[type]">Elf<br/>

    <input type ="submit"
           value="login">
</form>
