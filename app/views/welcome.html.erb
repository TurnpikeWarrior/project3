
<h3>Please sign up</h3>

    <form
          action ="<%= users_path %>"
          method="POST"
          autocomplete="false">

      <input  type="hidden"
              name="authenticity_token"
              value="<%= form_authenticity_token %>">


      <input type="text"
              name ="user[name]"
             placeholder="Name"><br/>

      <input type="text"
             name ="user[address]"
             placeholder="address"><br/>

      <input type="text"
              name ="user[age]"
             placeholder="age"><br/>

      <input type="text"
              name ="user[email]"
              placeholder="Your email address"><br/>

      <input type="password"
              name="user[password]"
              placeholder="Password"><br/>
      <input type ="submit"
              value="sign up">
    </form>



