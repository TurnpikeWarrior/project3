<h1>Sign Up</h1>

<form class="secondform"
      action ="<%= users_path %>"
      method="POST"
      autocomplete="false">

    <input type="hidden"
           name="authenticity_token"
           value="<%= form_authenticity_token %>">

    <div class="row">
      <div class="input-field col s12">
        <input type="text"
               name ="user[name]"
               placeholder="">
           <label for="Address">Name</label>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <input type="text"
               name ="user[address]"
               placeholder="">
        <label for="Address">Address</label>
    </div>

   <div class="row">
      <div class="input-field col s12">
        <input type="text"
               name ="user[age]"
               placeholder=""><br/>
        <label for="age">Age</label>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <input type="text"
               name ="user[email]"
               placeholder="">
          <label for="email">Your email address</label>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <input type="password"
               name="user[password]"
               placeholder="">
           <label for="password">Password</label>
      </div>
    <center>
    <input type="radio"
           id="test1"
           name="user[type]"
           value="Child"
           checked>
           <label for="test1">Child</label>

    <input type="radio"
           id="test2"
           name="user[type]"
           value="Elf">
           <label for="test2">Elf</label><center>
           <br/>


  <button  class="btn waves-effect waves-light"
           type ="submit"
           value="sign up">Sign Up
  </button>
</form>

<% if current_user %>
<hr/>
  <form action="<%= session_path %>" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Log out!">
  </form>
<% end %>
