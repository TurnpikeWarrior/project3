  <div layout="row" layout-align="end start">
    <form name="userLogin"
          ng-submit="user.login()">

      <div class="login"
            layout layout-sm="row">
        <md-input-container flex-offset-sm>
          <label>Email</label>
          <input ng-model="user.loginEmail">
        </md-input-container>
        <md-input-container flex-offset-sm>
          <label>Password</label>
          <input type="password"
                  ng-model="user.loginPassword">
        </md-input-container>
        <md-button class="btn1"
                    type="submit">Log In</md-button>
      </div>
    </form>
  </div>

  <h1>Sign Up</h1>

    <center><img src="http://doestakeout.net/images/8/8d/Christmas_lights_2014_002.gif"></center>
    <div layout="row" layout-align="center center">
      <div layout="row" ng-cloak class="md-inline-form">
        <form name="userForm" ng-submit="user.createUser()">
          <div layout layout-sm="column">
            <md-input-container layout-align="center">
              <label>Email</label>
              <input ng-model="user.email">
            </md-input-container>
            <md-input-container layout-align="center">
              <label>Name</label>
              <input ng-model="user.name">
            </md-input-container>
            <md-input-container class="md-block">
              <label>Age</label>
              <input type="number" ng-model="user.age">
            </md-input-container>
          </div>
          <md-input-container layout-align="center">
            <label>Password</label>
            <input type="password" ng-model="user.password">
          </md-input-container>
          <md-input-container class="md-block">
            <label>Address</label>
            <input ng-model="user.address">
          </md-input-container>
          <div layout layout-sm="column">
            <md-input-container layout-align="center">
              <label>City</label>
              <input ng-model="user.city">
            </md-input-container>
            <md-input-container flex="33">
              <label>State</label>
              <md-select ng-model="user.state">
                <md-option ng-repeat="state in user.states" value="{{state.abbrev}}">
                  {{state.abbrev}}
                </md-option>
              </md-select>
            </md-input-container>
            <md-input-container layout-align="center">
              <label>Postal Code</label>
              <input name="postalCode" ng-model="user.postalCode" placeholder="12345">
  <!-- removed from ^^ tag :: required ng-pattern="/^[0-9]{5}$/" md-maxlength="5" -->
